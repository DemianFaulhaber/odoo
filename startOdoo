#!/bin/bash

# Odoo Startup Script
# This script activates venv, kills any existing Odoo processes, and starts Odoo in development mode

# Get the script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_PATH="$SCRIPT_DIR/venv"

echo "ğŸ”„ Stopping any existing Odoo processes..."
pkill -f odoo-bin

# Wait a moment for processes to stop
sleep 2

echo "ğŸŒŸ Activating virtual environment..."
if [ -f "$VENV_PATH/bin/activate" ]; then
    source "$VENV_PATH/bin/activate"
    echo "âœ… Virtual environment activated: $(which python)"
else
    echo "âš ï¸  Virtual environment not found at $VENV_PATH"
    echo "ğŸ“ Using system Python: $(which python)"
fi

echo "ğŸš€ Starting Odoo in development mode..."
echo "ğŸ“‚ Working directory: $(pwd)"
echo "ğŸŒ Odoo will be available at: http://localhost:8069"
echo "âš ï¸  Press Ctrl+C to stop Odoo"
echo ""

# Change to script directory and start Odoo with development mode
cd "$SCRIPT_DIR"
./odoo-bin -c odoo.conf --dev=all
